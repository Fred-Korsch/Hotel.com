    <div class="field">
      <%= form.label :guest %>
      <%= form.text_field :guest, id: :room_guest, class: "form-control", placeholder: "Quarto", size: "60x12" %>
    </div>

    <div class="field">
      <%= form.label :briefing %>
      <%= form.text_area :briefing, id: :room_briefing, class: "form-control", placeholder: "Quarto", size: "60x12" %>
    </div>

    <div class="actions">
      <%= form.submit %>
